                        }
                    });
                },
                fnLogout() {
                    var self = this;
                    $.ajax({
                        url: "/user/logout.dox",
                        dataType: "json",
                        type: "POST",
                        data: {},
                        success: function (data) {
                            if (data.result == "success") {
                                console.log("sessionId =====> " + self.id);

