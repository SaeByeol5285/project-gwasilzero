                                localStorage.removeItem("com.naver.nid.refresh_token");

                                // ÎÑ§Ïù¥Î≤Ñ Î°úÍ∑∏ÏïÑÏõÉÏùÑ ÏúÑÌïú ÌåùÏóÖ Ìò∏Ï∂ú
                                var naverLogoutUrl = "https://nid.naver.com/nidlogin.logout";
